<% content_for :icon do %>
  <%= fa_icon 'comment-o 2x' %>
<% end -%>
<% content_for :title do %>
  Kontakt
<% end -%>

<div class='contact-form-wrapper'>
  <%= simple_form_for :contact, url: send_contact_path() do |f| %>
    <%= f.input :email, input_html: {style: 'width:100%'} %>
    <%= f.input :subject, input_html: {style: 'width:100%'} %>
    <%= f.input :body, as: :text, input_html: {style: 'width:100%', rows: 10} %>

  <div class="well centered">
    <%= f.submit 'Absenden', class: 'btn btn-primary btn-small' %>
  </div>
  <% end -%>
</div>
